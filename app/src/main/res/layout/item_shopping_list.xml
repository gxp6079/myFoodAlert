<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/food_type_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/carb_image"
        android:background="@drawable/image_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="serif"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/food_type_image"
        app:layout_constraintBottom_toBottomOf="@id/food_type_image"
        app:layout_constraintStart_toEndOf="@id/food_type_image"
        app:layout_constraintEnd_toStartOf="@id/add_food_item_button"
        />

    <Button
        android:id="@+id/add_food_item_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="@drawable/remove_btn_border"
        android:text="X"
        android:textSize="14dp"
        android:fontFamily="serif"
        app:layout_constraintTop_toTopOf="@id/food_type_image"
        app:layout_constraintBottom_toBottomOf="@id/food_type_image"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>