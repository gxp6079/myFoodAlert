<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfoodalert">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".Activities.LandingActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="true"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".Activities.ShoppingListActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="true" />

        <activity android:name=".Activities.FoodGroupsActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="true"/>

        <activity android:name=".Activities.FoodGroupPageActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="true"/>

        <activity android:name=".Activities.AddFoodItemActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="true"/>

    </application>
</manifest>
